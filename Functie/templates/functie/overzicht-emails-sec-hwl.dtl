{% load static %}

{% block title %}Beheerders overzicht{% endblock %}

{% block pagina %}

    <script>
        function copy_to_clipboard() {
            const el = document.getElementById('copy_source')
            navigator.clipboard.writeText(el.innerText)
        }
    </script>

    <!-- banner -->
    <div class="row center">
        <div class="col s12">
            <h3 class="nhb-rood-text">Beheerder e-mailadressen</h3>
            <p>Hieronder staan de e-mailadressen van alle {{ aantal }} SEC en HWL.</p>

            <a class="btn-nhb-rood" href="#" onclick="copy_to_clipboard()"><i class="material-icons-round left">copy</i>Kopieer naar mijn klembord</a>
        </div>
    </div>

    <!-- blauwe balk -->
    <div class="row-nhb-blauw">
        <div class="col s12">
            <table class="white">
                <tr>
                    <td>
                        <code id="copy_source" style="font-size: 60%">{{ emails }}</code>
                    </td>
                </tr>
            </table>
        </div>
    </div>

    {% include 'overig/site-feedback-sidebar.dtl' with op_pagina="functie-beheerders-lid-nrs" %}

{% endblock %}
