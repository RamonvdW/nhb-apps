{% load static %}

{% block title %}Inhoud mandje{% endblock %}

{% block pagina %}

    <script type="application/javascript">
        function verwijder(id)
        {
            const el = document.getElementById(id)
            const url = el.dataset.url

            // voer een POST uit om toe te voegen
            let form = document.createElement('form');
            form.setAttribute('method', 'post');
            form.setAttribute('action', url);

            let inp = document.createElement('input');
            inp.type = "hidden";
            inp.name = "csrfmiddlewaretoken";
            inp.value = getCookie('csrftoken');
            form.appendChild(inp);

            form.style.display = 'hidden';
            document.body.appendChild(form);
            form.submit();
        }

        function code_openen()
        {
            const el_knopje = document.getElementById('id_code_knopje')
            el_knopje.style.display = "none"

            const el_invoer = document.getElementById('id_code_invoeren')
            el_invoer.style.display = "block"

            const el_input = document.getElementById('id_code_invoer')
            el_input.focus()
        }

        function code_toevoegen()
        {
            const el = document.getElementById('id_code_invoer')
            const url = el.dataset.url
            // console.log('url:', url)

            // voer een POST uit om toe te voegen
            let form = document.createElement('form');
            form.setAttribute('method', 'post');
            form.setAttribute('action', url);

            let inp = document.createElement('input');
            inp.type = "hidden";
            inp.name = "csrfmiddlewaretoken";
            inp.value = getCookie('csrftoken');
            form.appendChild(inp);

            inp = document.createElement('input');
            inp.type = "hidden";
            inp.name = "code";
            inp.value = el.value;
            form.appendChild(inp);

            form.style.display = 'hidden';
            document.body.appendChild(form);
            form.submit();
        }
    </script>

    <!-- banner -->
    <div class="row center">
        <div class="col s12">
            <h3 class="page-banner">Mandje</h3>
            {% if mandje_is_leeg %}
                <p class="center">Je mandje is leeg</p>
            {% endif %}
        </div>
    </div>

    {% if not mandje_is_leeg %}

        <!-- blauwe balk met dialoog venster -->
        <div class="row-nhb-blauw">
            <div class="col s12 l10 offset-l1 xl8 offset-xl2">

                <!-- dialoog venster -->
                <div class="white left-align z-depth-3">
                    <div style="padding:0 30px 30px 30px">

                        <table class="white">

                            <tr><td colspan="4" class="center"><h6>Gekozen producten</h6></td></tr>

                            {% for inhoud in mandje_inhoud %}
                                <tr>
                                    <td>{% for hdr, lijn in inhoud.beschrijving %}{{ hdr }}<br>{% endfor %}</td>
                                    <td>{% for hdr, lijn in inhoud.beschrijving %}{{ lijn }}<br>{% endfor %}</td>
                                    <td class="right-align">&euro;&nbsp;{{ inhoud.prijs_euro }}</td>
                                    <td class="right-align">
                                        <button class="btn-nhb-blauw" id="id_verwijder_{{ inhoud.pk }}" onclick="verwijder('id_verwijder_{{ inhoud.pk }}')" data-url="{{ inhoud.url_verwijder }}">
                                            <i class="material-icons-round">delete</i></button>
                                    </td>
                                </tr>

                                {% if inhoud.gebruikte_code_str %}
                                    <tr>
                                        <td>Korting</td>
                                        <td>{{ inhoud.gebruikte_code_str }}</td>
                                        <td class="right-align">{% if inhoud.korting_euro > 0.0001 %}&minus;&nbsp;{% endif %}&euro;&nbsp;{{ inhoud.korting_euro }}</td>
                                        <td><!--knoppen--></td>
                                    </tr>
                                {% endif %}
                            {% endfor %}

                            <!-- totaal -->
                            <tr>
                                <td colspan="2" class="right-align"><b>Totaal:</b></td>
                                <td class="right-align"><b>&euro;&nbsp;{{ totaal_euro|floatformat:2 }}</b></td>
                            </tr>

                            <!-- kortingscode invoeren -->
                            <tr>
                                <td colspan="4">
                                    <div>
                                        <button id="id_code_knopje" class="btn-nhb-blauw" onclick="code_openen()">
                                            <i class="material-icons-round">add_circle_outline</i></button>
                                        <span style="margin-left:20px">Kortingscode toevoegen</span>
                                    </div>

                                    <div id="id_code_invoeren" class="row" style="display:none; margin-left:10px">
                                        <div class="col s8 m6 l4">
                                            <input id="id_code_invoer" type="text" name="code" size="40" maxlength="40" autocomplete="off" data-url="{{ url_code_toevoegen }}" onchange="code_toevoegen()">
                                        </div>
                                        <div class="col s4 m6 l8">
                                            <button class="btn-nhb-rood" onclick="code_toevoegen()">
                                                <i class="material-icons-round">add</i></button>
                                        </div>
                                    </div>
                                </td>
                            </tr>

                            <!-- afrekenen -->
                            <tr>
                                <td colspan="3" class="right-align">
                                    <button id="id_afrekenen" class="btn-nhb-rood">
                                        <i class="material-icons-round right">shopping_cart_checkout</i>{% if moet_afrekenen %}Afrekenen{% else %}Bestelling afronden{% endif %}</button>
                                </td>
                                <td><!--knoppen--></td>
                            </tr>

                        </table>

                    </div>
                </div>

            </div>
        </div>
    {% endif %}     <!-- mandje niet leeg -->

    {% include 'feedback/sidebar.dtl' with op_pagina="mandje-toon-inhoud" %}

{% endblock %}
