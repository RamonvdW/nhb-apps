            </td>

            <td style="border:1px solid red">
                {% sv-knop-nav icon='open url' tekst='Voorbeeld' extra_style='text-shadow:none; background-color:#fff; color:white' %}
            </td>
        </tr>

        <!-- experimenteer -->
