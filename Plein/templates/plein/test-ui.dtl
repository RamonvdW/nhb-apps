            </td>
        </tr>

        <!-- lichtblauw -->
        <tr>
            <td></td>
            <td></td>
            <td></td>

            <td>
                {% sv-knop-nav kleur='rood' icon='open url' tekst='Voorbeeld' extra_style='text-shadow:0 0 1px rgba(0,0,0,0.87); background-color:#0AA0E1' %}
            </td>

            <td style="border:1px solid red">
                {% sv-knop-nav kleur='rood' icon='open url' tekst='Voorbeeld' extra_style='text-shadow:none; background-color:#0AA0E1' %}
