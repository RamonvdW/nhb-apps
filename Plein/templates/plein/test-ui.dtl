{% load static %}
{% load design_icons %}
{% load design_knop %}

{% block title %}Test{% endblock %}

{% block pagina %}

    <table class="sv-kader-tabel" style="width:auto; margin-left:auto; margin-right:auto; border-collapse:unset; border-spacing:5px">

        <tr>
            <th class="center">sv-knop-nav</th>
            <th class="center">sv-knop-mailto</th>
            <th class="center">sv-knop-ext</th>
            <th class="center">Text schaduw aan</th>
            <th class="center">Text schaduw uit</th>
        </tr>

        <!-- geel -->
        <tr>
            <td></td>
            <td></td>
            <td></td>

            <td style="border:1px solid red">
                {% sv-knop-nav kleur='rood' icon='open url' tekst='Voorbeeld' extra_style='text-shadow:0 0 1px rgba(0,0,0,0.87); background-color:#FABE00' %}
            </td>

            <td style="border:1px solid red">
                {% sv-knop-nav kleur='rood' icon='open url' tekst='Voorbeeld' extra_style='text-shadow:none; background-color:#FABE00' %}
            </td>
        </tr>

        <!-- rood -->
        <tr>
            <td>
                {% sv-knop-nav kleur='rood' icon='sluiten' tekst='Sluit' %}
            </td>

            <td>
                {% sv-knop-mailto kleur='rood' email='ui@sv.nl' tekst='ui support' %}
            </td>

            <td>
                {% sv-knop-ext kleur='rood' icon='open url' tekst='Link' %}
