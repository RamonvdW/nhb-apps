{% load static %}

{% block title %}Bondspas{% endblock %}

{% block pagina %}

    <!-- banner -->
    <div class="row center">
        <div class="col s12">
            <h3 class="page-banner">De bondspas van ...</h3>

            <form action="{{ url_download }}" method="post" onsubmit="submit_knop.disabled=true; return true;">
                {% csrf_token %}
                <button class="btn-sv-rood" id="submit_knop" type="submit">Download</button>
            </form>
        </div>
    </div>

    <!-- blauw balk met bondspas -->
    <div class="row-sv-blauw">
        <div class="col s12">
            <img id="id_image" alt="Bondspas" src="data:image/jpeg;base64,{{ bondspas_base64 }}" style="max-width:800px; width:100%; height:auto"/>
        </div>
    </div>

    {% include 'feedback/sidebar.dtl' with op_pagina="bondspas-toon-bondspas-van" %}

{% endblock %}
