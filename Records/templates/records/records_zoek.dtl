{% load static %}
{% load overig_filters %}   <!-- highlight filter -->

{% block title %}Handboogsport records doorzoeken{% endblock %}

{% block pagina %}

<h2>Records doorzoeken</h2>

<div class="container z-depth-2 white">
    <div class="row nav blue white-text">
        <div class="col s12 center">
            <h5>Zoeken</h5>
            <p>in de handboogsport records</p>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <span>Voer een deel van de naam van een schutter in.</span>
            <p>Je kan ook een NHB nummer of plaatsnaam invoeren.</p>
        </div>
    </div>

    <div class="row">
        <form class="col s12" method="get" action="{{ records_zoek_url }}">
            {{ form.zoekterm.label_tag }} {{ form.zoekterm }}
            <p>&nbsp;</p>
            <div class="center-align">
                <input class="btn blue" type="submit" value="Zoeken">
            </div>
        </form>
    </div>

    <div class="row">&nbsp;</div>
</div>

{% if object_list.count %}
    <div class="row">
        <div class="col s12 m10 l8 xl6">
            <ul class="collection with-header">
                <li class="collection-header"><h5>Gevonden records ({{ object_list.count }})</h5></li>
                {% for obj in object_list %}
                    <li class="collection-item">
                        <div>
                            <a href="{% url 'Records:specifiek' obj.discipline obj.volg_nr %}"><i class="material-icons-round secondary-content">visibility</i></a>
                            <span>{{ obj.naam|highlight:zoekterm }}</span>
                            {% if obj.datum.year >= 1950 %}
                                <span> op {{ obj.datum }}</span>
                            {% endif %}
                            {% if obj.plaats %}
                                <span> in {{ obj.plaats|highlight:zoekterm }}</span>
                            {% endif %}
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% else %}
    {% if have_searched %}
    <p class="red-text">Niets gevonden</p>
    {% endif %}
{% endif %}

{% endblock %}
