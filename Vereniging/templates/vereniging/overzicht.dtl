{% load static %}

{% block title %}Beheer Vereniging{% endblock %}

{% block pagina %}

    <!-- banner -->
    <div class="row center">
        <div class="col s12">
            <h3 class="page-banner">Beheer Vereniging</h3>
            <p>Je huidige rol is: <b>{{ huidige_rol }}</b>.</p>
        </div>
    </div>

    <!-- blauwe balk met informatie -->
    <div class="row-nhb-blauw">
        <div class="col s12 m10 offset-m1 l8 offset-l2">
            <table class="white">
                <tr>
                    <th>Verenigingsnummer</th>
                    <td>{{ nhb_ver.ver_nr }}</td>
                </tr>
                <tr>
                    <th>Naam</th>
                    <td>{{ nhb_ver.naam }}</td>
                </tr>
                <tr>
                    <th>Plaats</th>
                    <td>{{ nhb_ver.plaats }}</td>
                </tr>
                <tr>
                    <th>Regio</th>
                    <td>{{ nhb_ver.regio }}</td>
                </tr>
                {% if clusters.count > 0 %}
                    <tr>
                        <th>Cluster{% if clusters.count > 1 %}s{% endif %}</th>
                        <td>
                            {% for cluster in clusters %}
                                <span>{{ cluster }}</span><br>
                            {% endfor %}
                        </td>
                    </tr>
                {% endif %}

                <tr>
                    <th>Website</th>
                    <td>
                        {% if nhb_ver.website %}
                            <a class="email" href="{{ nhb_ver.website }}" target="_blank" rel="noopener noreferrer"><code>{{ nhb_ver.website }}</code></a>
                        {% else %}
                            <i>Geen</i>
                        {% endif %}
                    </td>
                </tr>

                {% comment %}
                <tr>
                    <th>Telefoonnummer</th>
                    <td>{% if nhb_ver.telefoonnummer %}{{ nhb_ver.telefoonnummer }}{% else %}<i class="nhb-rood-text">Geen</i>{% endif %}</td>
                </tr>

                <tr>
                    <th>KvK nummer</th>
                    <td>{% if nhb_ver.kvk_nummer %}{{ nhb_ver.kvk_nummer }}{% else %}<i class="nhb-rood-text">Geen</i>{% endif %}</td>
                </tr>
                {% endcomment %}

                {% if nhb_ver.geen_wedstrijden %}
                    <tr>
                        <th>Speciale status</th>
                        <td>Geen wedstrijden</td>
                    </tr>
                {% endif %}
            </table>
        </div>
    </div>

    {% if toon_wedstrijden %}

        <!-- witruimte -->
        <div class="row center">
            <div class="col s12">
                <h4>Wedstrijden</h4>
            </div>
        </div>

        <!-- blauwe balk -->
        <div class="row-nhb-blauw">
            <div class="col s12">

                <!-- competitiewedstrijden -->
                {% if toon_competities %}
                    {% url 'CompScores:wedstrijden' as card_url %}
                    {% include 'plein/card.dtl' with title="Competitiewedstrijden" text="Wedstrijden die bij deze vereniging geschoten worden." icon="event" url=card_url %}
                {% endif %}

                <!-- scores invoeren -->
                {% if heeft_wedstrijden %}
                    {% url 'CompScores:wedstrijden-scores' as card_url %}
                    {% include 'plein/card.dtl' with title="Scores invoeren" text="Scores invoeren voor wedstrijden die bij deze vereniging geschoten worden." icon="edit" url=card_url %}
                {% endif %}

                <!-- wedstrijdkalender (alleen voor de HWL) -->
                {% if toon_wedstrijdkalender %}
                    {% url 'Wedstrijden:vereniging' as card_url %}
                    {% include 'plein/card.dtl' with title="Wedstrijdkalender" text="Alle overige wedstrijden die door deze vereniging georganiseerd worden." icon="event_note" url=card_url %}
                {% endif %}

            </div>
        </div>

    {% endif %}

    <!-- competities -->
    {% for kaartje in kaartjes %}

        {% if kaartje.heading %}
            <!-- witruimte -->
            <div class="row center" id="{{ kaartje.anker }}">
                <div class="col s12">
                    <h4>{{ kaartje.heading }}</h4>
                    <p>{{ kaartje.comp_fase_indiv }}{% if kaartje.comp_fase_teams %}<br>{{ kaartje.comp_fase_teams }}{% endif %}</p>
                </div>
            </div>

            <!-- blauwe balk -->
            <div class="row-nhb-blauw">
                <div class="col s12">

        {% elif kaartje.einde_blok %}

                </div>
            </div>

        {% elif kaartje.geen_kaartjes %}

                    <p class="white" style="padding:30px">
                        <i>Geen kaartjes voor deze competitie</i>
                    </p>

        {% elif kaartje.beschikbaar_vanaf %}

                    <!-- toon disabled -->
                    {% if kaartje.img %}
                        {% include 'plein/card_logo_nog-niet-beschikbaar.dtl' with title=kaartje.titel text=kaartje.tekst vanaf=kaartje.beschikbaar_vanaf img=kaartje.img %}
                    {% else %}
                        {% include 'plein/card_nog-niet-beschikbaar.dtl' with title=kaartje.titel text=kaartje.tekst vanaf=kaartje.beschikbaar_vanaf icon=kaartje.icon %}
                    {% endif %}

        {% elif kaartje.img %}

                    {% include 'plein/card_logo.dtl' with title=kaartje.titel text=kaartje.tekst img_src=kaartje.img img_height="60" url=kaartje.url %}

        {% else %}

                    {% include 'plein/card.dtl' with title=kaartje.titel text=kaartje.tekst icon=kaartje.icon url=kaartje.url %}

        {% endif %}
    {% endfor %}

    <!-- witruimte -->
    <div class="row center">
        <div class="col s12">
            <h4>Beheer Vereniging</h4>
        </div>
    </div>

    <!-- blauwe balk -->
    <div class="row-nhb-blauw">
        <div class="col s12">
            <!-- ledenlijst -->
            {% url 'Vereniging:ledenlijst' as card_url %}
            {% include 'plein/card.dtl' with title="Ledenlijst" text="Leden van de vereniging, inclusief wedstrijdklasse jeugdleden en laatste inlog op deze website." icon="import_contacts" url=card_url %}

            <!-- beheerders vereniging -->
            {% url 'Functie:overzicht-vereniging' as card_url %}
            {% include 'plein/card.dtl' with title="Beheerders" text="E-mailadressen van de (hoofd-)wedstrijdleider functies en eraan gekoppelde leden." icon="supervisor_account" url=card_url %}

            <!-- instellingen leden -->
            {% url 'Vereniging:leden-voorkeuren' as card_url %}
            {% include 'plein/card.dtl' with title="Voorkeuren leden" text="Voorkeuren van de leden inzien en boog type instellen." icon="tune" url=card_url %}

            <!-- accommodatie details -->
            {% if accommodatie_details_url %}
                {% include 'plein/card.dtl' with title="Accommodatie" text="Details over jullie accommodatie die van belang zijn voor wedstrijden." icon="account_balance" url=accommodatie_details_url %}
            {% endif %}

            <!-- externe locaties -->
            {% if url_externe_locaties %}
                {% include 'plein/card.dtl' with title="Wedstrijdlocaties" text="Externe locaties waar jullie vereniging wedstrijden kan organiseren." icon="hiking" url=url_externe_locaties %}
            {% endif %}
        </div>
    </div>

    {% include 'feedback/sidebar.dtl' with op_pagina="vereniging-overzicht" %}

{% endblock %}
