{% load static %}

{% block title %}Klassegrenzen bondscompetitie{% endblock %}

{% block pagina %}

    {% include 'overig/site-feedback-sidebar.dtl' with op_pagina="klassegrenzen-tonen" %}

    <h4>Klassegrenzen bondscompetitie</h4>

    {% if not comp.klassegrenzen_vastgesteld %}

        <p>De klassegrenzen voor de <b>{{ comp.beschrijving }}</b> zijn nog niet vastgesteld.</p>

    {% else %}

        <p>Hieronder staan de vastgestelde klassegrenzen voor de individuele wedstrijdklassen en teams wedstrijdklassen voor de <b>{{ comp.beschrijving }}</b>.</p>

        <table class="white">
            <tr class="nhb-grijs">
                <td colspan="2">
                    <h5>Individuele wedstrijdklassen</h5>
                </td>
            </tr>

            <tr>
                <th>Materiaalklasse</th>
                <th>Minimaal aanvangs<wbr/>gemiddelde</th>
            </tr>

            {% for obj in indiv_klassen %}
                <tr>
                    <td>{{ obj.beschrijving }}</td>

                    <td>{% if obj.min_ag %}
                            {{ obj.min_ag }}
                        {% else %}
                            <i class="grey-text">n.v.t.</i>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}

            <tr class="nhb-grijs">
                <td colspan="2">
                    <h5>Team wedstrijdklassen</h5>
                </td>
            </tr>

            <tr>
                <th>Materiaalklasse</th>
                <th>Minimaal aanvangs<wbr/>gemiddelde</th>
            </tr>

            {% for obj in team_klassen %}
                <tr>
                    <td>{{ obj.beschrijving }}</td>

                    <td>{% if obj.min_ag %}
                            {{ obj.min_ag }}
                        {% else %}
                            <i class="grey-text">n.v.t.</i>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </table>

    {% endif %}

{% endblock %}

{% block menu-competities %}
    {% include 'competitie/menu.dtl' %}
{% endblock %}
