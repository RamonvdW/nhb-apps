{% load static %}

{% block title %}Tijdlijn{% endblock %}

{% block pagina %}

    <!-- banner -->
    <div class="row center">
        <div class="col s12">
            <h3 class="page-banner">Tijdlijn</h3>
            <h5>{{ comp.beschrijving }}</h5>
        </div>
    </div>

    <!-- witruimte -->
    <div class="row center">
        <div class="col s12">
            <h4>Individuele competitie</h4>
        </div>
    </div>

    <div class="row nhb-blauw-hoofd white-text center" style="padding-top:50px; padding-bottom:50px">
        <div class="col s12">

            <table class="white">
                <thead>
                    <tr>
                        <th class="center">Fase</th>
                        <th>Activiteit</th>
                        <th>Periode</th>
                    </tr>
                </thead>

                <tr>
                    <td class="center{% if comp.fase_indiv == 'A' %} nhb-rood white-text{% endif %}">A</td>
                    <td>Vaststellen aanvangsgemiddelden (Bondsbureau)<br>Vaststellen klassengrenzen (Bondsbureau)<br>Clusters instellen (RCL)<br>Planning regiocompetitie wedstrijden (RCL)</td>
                    <td>
                        {% if comp.fase_indiv > 'A' %}
                            <span class="green-text">Afgerond</span>
                        {% else %}
                            <span>tot {{ comp.begin_aanmeldingen }}</span>
                        {% endif %}
                    </td>
                </tr>

                <tr>
                    <td></td>
                    <td colspan="2"><b>Regiocompetitie</b></td>
                </tr>

                <tr>
                    <td {% if comp.fase_indiv == 'B' %}class="nhb-rood white-text center"{% else %}class="center"{% endif %}>B</td>
                    <!-- {{ comp.uiterste_datum_lid }} is 1 augustus om praktische redenen, maar reglement zegt 15 juli -->
                    <td>Open voor aanmelden individueel (sporter/HWL)<br>Planning regiocompetitie wedstrijden (RCL)</td>
                    <td>
                        {% if comp.fase_indiv > 'B' %}
                            <span class="green-text">Afgerond</span>
                        {% else %}
                            <span>{{ comp.begin_aanmeldingen }}{% if comp.einde_aanmeldingen > comp.begin_aanmeldingen %}<br>tot en met{{ comp.einde_aanmeldingen }}{% endif %}</span>
                        {% endif %}
                    </td>
                </tr>

                <tr>
                    <td {% if comp.fase_indiv == 'E' %} class="nhb-rood white-text center"{% else %}class="center"{% endif %}>E</td>
                    <td>Regio wedstrijden (sporters)<br>Scores invoeren (HWL)<br>Publiceer tussenstand regiocompetitie (automatisch)<br>Publiceer voorlopige deelnemerslijst RK (automatisch)</td>
                    <td>
                        {% if comp.fase_indiv > 'E' %}
                            <span class="green-text">Afgerond</span>
                        {% elif comp.fase_indiv == 'E' %}
                            <span>tot en met {{ comp.laatst_mogelijke_wedstrijd }}</span>
                        {% else %}
                            <span>vanaf {{ comp.eerste_wedstrijd }}{% if comp.laatst_mogelijke_wedstrijd > comp.eerste_wedstrijd %}<br>tot en met {{ comp.laatst_mogelijke_wedstrijd }}{% endif %}</span>
                        {% endif %}
                    </td>
                </tr>

                <tr>
                    <td {% if comp.fase_indiv == 'F' %} class="nhb-rood white-text center"{% else %}class="center"{% endif %}>F</td>
                    <td>Vaststellen eindstand regiocompetitie (RCL)</td>
                    <td>
                        {% if comp.fase_indiv > 'F' %}
                            <span class="green-text">Afgerond</span>
                        {% else %}
                            <span>tot {{ comp.einde_fase_F }}</span>
                        {% endif %}
                    </td>
                </tr>

                <tr>
                    <td {% if comp.fase_indiv == 'G' %} class="nhb-rood white-text center"{% else %}class="center"{% endif %}>G</td>
                    <td>Afsluiten regiocompetitie (BKO)<br>Deelnemerslijst RK opstellen (automatisch)</td>
                    <td>
                        {% if comp.fase_indiv > 'G' %}
                            <span class="green-text">Afgerond</span>
                        {% else %}
                            <span>{{ comp.einde_fase_G }}</span>
                        {% endif %}
                    </td>
                </tr>

                <tr>
                    <td></td>
                    <td colspan="2"><b>Rayonkampioenschappen</b></td>
                </tr>

                <tr>
                    <td {% if comp.fase_indiv == 'J' %} class="nhb-rood white-text center"{% else %}class="center"{% endif %}>J</td>
                    <td>Bevestig deelname RK individueel (HWL / RKO)</td>
                    <td>
                        {% if comp.fase_indiv > 'J' %}
                            <span class="green-text">Afgerond</span>
                        {% else %}
                            <span>tot {{ comp.datum_klassengrenzen_rk_bk_teams }}</span>
                        {% endif %}
