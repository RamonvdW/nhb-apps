{% load static %}
{% load overig_filters %}

{% block title %}Korps{% endblock %}

{% block pagina %}

    <!-- banner -->
    <div class="row center">
        <div class="col s12">
            <h3 class="page-banner">Korps scheidsrechters</h3>
            <p>Hieronder volgt de lijst van alle {{ aantal }} scheidsrechters, inclusief alle bekende contactgegevens</p>
            <p class="hide-on-small-only"><i>(kolommen 'deelt' is met korps, wedstrijdorganisatie)</i></p>
        </div>
    </div>

    <!-- blauwe balk met informatie in een tabel -->
    <div class="row-sv-blauw">
        <div class="col s12">
            <table class="white" id="tabel1">
                <thead>
                    <tr>        <!-- filter veld -->
                        <td colspan="2" class="table-filter">
                            <input class="table-filter" oninput="myTableFilter(this, 'tabel1')" placeholder="Zoeken" autofocus/>
                        </td>
                        <td colspan="4"></td>
                    </tr>
                    <tr>
                        <th data-filter="on">Naam</th>
                        <th data-filter="on" class="center">Niveau</th>
                        <th>Telefoon</th>
                        <th class="hide-on-small-only">Deelt tel.nr</th>
                        <th>E-mail</th>
                        <th class="hide-on-small-only">Deelt e-mail</th>
                    </tr>
                </thead>

                <tbody>
                    {% for sporter in korps %}
                        <tr>
                            <td>{{ sporter.volledige_naam }}</td>
                            <td class="center">{{ sporter.level_str }}</td>
                            <td>{{ sporter.telefoon }}</td>
                            <td class="hide-on-small-only">{{ sporter.delen_tel_str }}</td>
                            <td><code>{{ sporter.email|wbr_email }}</code></td>
                            <td class="hide-on-small-only">{{ sporter.delen_email_str }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {% include 'feedback/sidebar.dtl' with op_pagina="scheidsrechter-korps-met-contactgegevens" %}

{% endblock %}
