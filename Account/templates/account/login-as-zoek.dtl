{% load static %}
{% load overig_filters %}   <!-- highlight filter -->

{% block title %}Account wissel{% endblock %}

{% block pagina %}

    <!-- banner -->
    <div class="row center">
        <div class="col s12">
            <h3 class="page-banner">Account wissel</h3>
        </div>
    </div>

    <script type="application/javascript">
        function do_selecteer(id)
        {
            // voer een POST uit om toe te voegen
            const form = document.createElement('form');
            form.setAttribute('method', 'post');
            form.setAttribute('action', '{{ url }}');

            let inp = document.createElement('input');
            inp.type = "hidden";
            inp.name = "selecteer";
            inp.value = id.getAttribute("data-pk");
            form.appendChild(inp);

            inp = document.createElement('input');
            inp.type = "hidden";
            inp.name = "csrfmiddlewaretoken";
            inp.value = getCookie('csrftoken');
            form.appendChild(inp);

            form.style.display = 'hidden';
            document.body.appendChild(form);
            form.submit();
        }
    </script>

    <!-- blauwe balk met dialoog venster -->
    <div class="row-sv-blauw">
        <div class="col s10 offset-s1 m8 offset-m2 l6 offset-l3 xl4 offset-xl4 white z-depth-3">

            <!-- dialoog venster -->
            <div style="margin:50px 30px 30px 30px">
                <form action="{{ url }}" method="get">

                    <div class="input-field">
                        {{ form.zoekterm.label_tag }}{{ form.zoekterm }}
                    </div>

                    <button class="btn-sv-rood" type="submit">
                        <i class="notranslate material-icons-round left">search</i>Zoek</button>
                </form>
            </div>
        </div>
    </div>


    <!-- witruimte -->
    <div class="row center">
        <div class="col s12">
            <h4>Gevonden gebruikers ({{ aantal_gevonden }})</h4>
        </div>
    </div>

    <!-- zoekresultaten -->
    {% if zoekterm %}
        {% if object_list.count %}

            <!-- blauwe balk witten tabel met resultaten -->
            <div class="row sv-blauw-hoofd white-text center" style="padding-top:50px; padding-bottom:50px">
                <div class="col s12 m8 offset-m2 l6 offset-l3">

                    <table class="white">
                        <tr>
                            <th>Inlog</th>
                            <th>Volledige naam</th>
                            <th><!-- kolom voor knoppen --></th>
                        </tr>

                        {% for account in object_list %}
                            <tr>
                                <td>{{ account.username|highlight:zoekterm }}</td>
                                <td>{{ account.volledige_naam|highlight:zoekterm }}</td>
                                <td>
                                    <button class="btn-sv-rood" onclick="do_selecteer(this)" data-pk="{{ account.pk }}">
                                        <i class="notranslate material-icons-round">play_arrow</i>
                                    </button>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>

                </div>
            </div>
        {% endif %}

        <p class="center">Tip: gebruiker moet een account aangemaakt hebben.</p>
    {% endif %}

    <!-- geen feedback: with op_pagina="account-login-as-zoek" -->

{% endblock %}

